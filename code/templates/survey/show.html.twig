{% extends 'base.html.twig' %}

{% block title %}Survey{% endblock %}

{% block body %}
    <div class="container">
        <h1 class="text-center mt-5 mb-3">Survey #{{ survey.id }}</h1>

        <div class="card">
            <div class="card-header">
                <a class="btn btn-outline-primary" href="{{ path('app_survey_index') }}">Back to Surveys</a>

                <a class="btn btn-outline-primary" href="{{ path('app_survey_edit', {'id': survey.id}) }}">Edit</a>

                {{ include('survey/_delete_form.html.twig') }}
            </div>
            <div class="card-body">
                <table class="table">
                    <tbody>
                        <tr>
                            <th>ID</th>
                            <td>{{ survey.id }}</td>
                        </tr>
                        <tr>
                            <th>Name</th>
                            <td>{{ survey.name }}</td>
                        </tr>
                        <tr>
                            <th>Active</th>
                            <td>{{ survey.active ? 'Yes' : 'No' }}</td>
                        </tr>
                        <tr>
                            <th>Created At</th>
                            <td>{{ survey.createdAt ? survey.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                        </tr>
                        <tr>
                            <th>Updated At</th>
                            <td>{{ survey.updatedAt ? survey.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>

    </div>
{% endblock %}
