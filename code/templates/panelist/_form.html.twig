{{ form_start(form) }}
    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                {{ form_row(form.firstName, {'attr': {'class': 'form-control'} }) }}
            </div>
        </div>

        <div class="col-md-6">
            <div class="form-group">
                {{ form_row(form.lastName, {'attr': {'class': 'form-control'} }) }}
            </div>
        </div>

        <div class="col-md-6">
            <div class="form-group">
                {{ form_row(form.email, {'attr': {'class': 'form-control'} }) }}
            </div>
        </div>

        <div class="col-md-6">
            <div class="form-group">
                {{ form_row(form.phone, {'attr': {'class': 'form-control'} }) }}
            </div>
        </div>

        <div class="col-md-6">
            <div class="form-group">
                {{ form_row(form.country, {'attr': {'class': 'form-control'} }) }}
            </div>
        </div>

        <div class="col-md-6">
            <div class="form-group">
                {{ form_row(form.receiveNewsletters, {'attr': {'class': 'form-check-input d-block'} }) }}
            </div>
        </div>
    </div>
    <button class="btn mt-3 {{ button_color|default('btn-outline-primary') }}">{{ button_label|default('Save Panelist') }}</button>
{{ form_end(form) }}
